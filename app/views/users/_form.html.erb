<%= form_for(@user, :html => {:multipart => true}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container-fluid">
  <div class="content">

    <div class="row">
           <div class="col-md-6">
            <div class="well well-sm">
                  
                <form class="form-inline" role="form">
                    <fieldset>
                        <legend class="text-center header">New user</legend>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                              <%= f.label :name %>
                              <%= f.text_field :name %>
                            </div>
                          </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i>
                            </span>
                            <div class="col-md-8">
                              <%= f.label :email %>
                              <%= f.text_field :email %>
                           </div>
                        </div>
                        <div class="form-group">
                          <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i>
                            </span>
                            <div class="col-md-8">
                              <%= f.label :price %>
                              <%= f.text_field :price %>
                            </div>    
                        </div>   
                <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                       <div class="col-md-8 gender">
                          Gender:<br> 
                           <%= f.radio_button(:gender, "Male")%>
                          <%= f.label(:gender_option1, "Male") %>
                            <%= f.radio_button(:gender, "Female")%>
                            <%= f.label(:gender_option2, "Female") %>
                        </div>
                </div>
              <div class="form-group">
                       <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                          <div class="col-md-8 gender">
                             Payment:<br> 
                            <%= f.check_box(:payment) %>
                            <%= f.label(:Debitcard )%>
                            <%= f.check_box(:payment)%>
                            <%= f.label(:Creditcard) %>
                            <%= f.check_box(:payment) %>
                            <%= f.label(:cashondelivery)%> 
                          </div>
              </div>
            <div class="form-group">
                     <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                <%= f.label :image %><br />
                                 <%= f.file_field :image %>
                            </div>
                </div>
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                  <div class="col-md-8">
                        <%= f.label "purchasedate" %><br />
                        <%= f.text_field :purchasedate %>
                  </div>
            </div>
              <div class="form-group">
                      <div class="col-md-12 text-center">
                           <%= f.submit %>
                       </div>
               </div>
                  </fieldset>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
<% end %>
<script type="text/javascript">
$('#user_purchasedate').datepicker();
</script>
