
<h1>Samsung users</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Price</th>
    <th>Payment Mode</th>
 
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.gender %></td>
    <td>$<%= user.price %></td>
    <td><%= user.payment %></td>
    <td><%= user.purchasedate %></td>
    <td class="btn-warning"><%= link_to 'Show', user %></td>
    <td class="btn-info"><%= link_to 'Edit', edit_user_path(user) %></td>
    <td class="btn-danger"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

